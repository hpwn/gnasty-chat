GNASTY_SINKS=sqlite
# set to /data/elora.db if you want gnasty to write into elora-chat's DB instead
GNASTY_SINK_SQLITE_PATH=/data/gnasty.db
GNASTY_SINK_BATCH_SIZE=1
GNASTY_SINK_FLUSH_MAX_MS=0

GNASTY_TWITCH_CHANNELS=elora
GNASTY_TWITCH_NICK=elora_bot
GNASTY_TWITCH_TOKEN_FILE=/secrets/twitch_access
GNASTY_TWITCH_CLIENT_ID=
GNASTY_TWITCH_CLIENT_SECRET=
GNASTY_TWITCH_REFRESH_TOKEN_FILE=/secrets/twitch_refresh

# Configure YouTube polling (either watch URLs or channel handles work).
GNASTY_YT_URL=https://youtube.com/@yourchannel/live
GNASTY_YT_RETRY_SECS=30

# Legacy variables are still supported for backwards compatibility.
TWITCH_TOKEN=oauth:replace-me
GN_SQLITE_TUNING=0
